<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/news"
    app:startDestination="@id/newsFragment">

    <fragment
        android:id="@+id/newsFragment"
        android:name="by.vfdev.angle.UI.News.NewsFragment"
        android:label="fragment_news"
        tools:layout="@layout/list_news_fragment" >
        <action
            android:id="@+id/action_newsFragment_to_newsDetailFragment"
            app:destination="@id/newsDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/newsDetailFragment"
        android:name="by.vfdev.angle.UI.News.NewsDetailFragment"
        android:label="fragment_news_detal"
        tools:layout="@layout/detail_news_fragment" />
</navigation>