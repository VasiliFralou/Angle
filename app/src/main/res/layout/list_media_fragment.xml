<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor"
    tools:context=".UI.Media.MediaFragment"
    android:orientation="vertical">

    <SearchView
        android:id="@+id/searchMedia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/searchview_backgound"
        android:iconifiedByDefault="false"
        android:queryBackground="@android:color/transparent"
        android:queryHint="Введите имя, фамилию, локацию и т.д">
    </SearchView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/GalleryListRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="@color/mainColor"
        tools:listitem="@layout/item_media_layout">
    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>